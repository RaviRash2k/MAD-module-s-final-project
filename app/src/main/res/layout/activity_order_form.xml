<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingHorizontal="30dp"
    android:paddingVertical="21dp"
    android:background="#494949"
    android:id="@+id/main">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:padding="16dp"
          android:gravity="center_vertical"
          android:background="@drawable/home_backg">

          <TextView
              android:id="@+id/oName"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="name"
              android:layout_marginVertical="15dp"
              android:textSize="25dp"
              android:textAlignment="center"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="16sp"
              android:textColor="@color/black"
              android:textStyle="bold"
              android:text="Email : " />

          <EditText
              android:id="@+id/ordEmail"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:minHeight="50dp"
              android:textSize="16sp"
              android:textColor="@color/black"
              android:hint="Enter your email" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="16dp"
              android:textSize="16sp"
              android:textStyle="bold"
              android:textColor="@color/black"
              android:text="Mobile : " />

          <EditText
              android:id="@+id/ordMobile"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:minHeight="50dp"
              android:textSize="16sp"
              android:textColor="@color/black"
              android:hint="Enter valid mobile number" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="16dp"
              android:textSize="16sp"
              android:textStyle="bold"
              android:textColor="@color/black"
              android:text="Home Address : " />

          <EditText
              android:id="@+id/ordAddress"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:minHeight="50dp"
              android:layout_marginTop="5dp"
              android:textSize="16sp"
              android:textColor="@color/black"
              android:hint="Enter your deliver address" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="16dp"
              android:textSize="16sp"
              android:layout_marginBottom="5dp"
              android:textStyle="bold"
              android:textColor="@color/black"
              android:text="Quantity : " />

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:gravity="center_vertical">

              <TextView
                  android:id="@+id/ordDec"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="20sp"
                  android:textStyle="bold"
                  android:text="-"
                  android:textColor="@color/black"
                  android:padding="10dp"/>

              <TextView
                  android:id="@+id/ordQty"
                  android:layout_width="50dp"
                  android:layout_height="wrap_content"
                  android:textSize="20sp"
                  android:textAlignment="center"
                  android:text="1"
                  android:textColor="@color/black"
                  android:padding="8dp"/>

              <TextView
                  android:id="@+id/ordInc"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="20sp"
                  android:textStyle="bold"
                  android:text="+"
                  android:textColor="@color/black"
                  android:padding="10dp"/>

          </LinearLayout>

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginVertical="20dp"
              android:layout_gravity="end"

              android:paddingVertical="15dp"
              android:paddingHorizontal="13dp"
              android:background="@drawable/order_cost_background"
              android:orientation="horizontal"
              android:gravity="end">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="17dp"
                  android:paddingBottom="6dp"
                  android:layout_marginEnd="10dp"
                  android:layout_gravity="bottom"
                  android:text="Your order cost is LKR: "
                  android:textColor="@color/black"/>

              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

                  <TextView
                      android:id="@+id/unitPrice"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="0 "
                      android:padding="4dp"
                      android:gravity="end"
                      android:textSize="20dp"
                      android:textColor="@color/black"
                      android:textStyle="bold"/>

                  <TextView
                      android:id="@+id/qtyOfOrd"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="1"
                      android:padding="4dp"
                      android:textSize="20dp"
                      android:textColor="@color/black"
                      android:textStyle="bold"/>

                  <TextView
                      android:id="@+id/finalPrice"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="0 "
                      android:padding="4dp"
                      android:textSize="20dp"
                      android:textColor="@color/black"
                      android:textStyle="bold"/>
              </LinearLayout>

          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:gravity="center"
              android:layout_marginTop="24dp">

              <Button
                  android:id="@+id/ordCansel"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginEnd="16dp"
                  android:text="Cancel"
                  android:textSize="16sp"
                  android:backgroundTint="#B44A4A"/>

              <Button
                  android:id="@+id/ordBtn"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Order"
                  android:textSize="16sp" />

          </LinearLayout>

      </LinearLayout>

</LinearLayout>
